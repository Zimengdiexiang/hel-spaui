{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "outDir": "lib-js",
    "noEmit": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest"],
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules/rc-picker/lib/interface.d.ts",
  ]
}
